div
div(style='height:100%;width:100%;')
  .header-blue(style='width:100%;height:100%;')
    nav.navbar.navbar-dark.navbar-expand-md.navigation-clean-search
      .container
        a.navbar-brand(href='#', style='font-size:40px;width:100%;') Satsang Oceania
        .container
          a.navbar-brand(href='#', style='font-size:40px;width:100%;')
          div
            a.navbar-brand(href='#', style='font-size:40px;width:100%;')
              // Signin & Signup
            a.btn.btn-primary(href='#', data-toggle='modal', data-target='.login-register-form')
              | Login - Registration Modal
            // Login / Register Modal
            .modal.fade.login-register-form(role='dialog', aria-hidden='true', style='display: none;')
              .modal-dialog.modal-sm
                .modal-content
                  .modal-header
                    button.close(type='button', data-dismiss='modal')
                      span.glyphicon.glyphicon-remove
                    ul.nav.nav-tabs(style='width:100%')
                      li.active(style='padding-right:15%')
                        a(data-toggle='tab', href='#login-form')
                          | Login    
                          |
                          span.glyphicon.glyphicon-user
                      li(style='padding-right:1')
                        a.active.show(data-toggle='tab', href='#registration-form',style='margin-left:100px')
                          |    
                          | Register
                          span.glyphicon.glyphicon-pencil
                  .modal-body
                    .tab-content
                      #login-form.tab-pane.fade.in
                        form(action='/api/signin/', method='POST')
                          .form-group
                            label(for='email') Email:
                            input#email.form-control(type='email', placeholder='Enter email', name='username')
                          .form-group
                            label(for='pwd') Password:
                            input#pwd.form-control(type='password', placeholder='Enter password', name='pwd')
                          .checkbox
                            label
                              input(type='checkbox', name='remember')
                              |  Remember me
                          button.btn.btn-default(type='submit') Login
                      #registration-form.tab-pane.fade.active.show
                        form(action='/api/registeruser/', method='POST')
                            .form-wrapper
                              br
                              label(for='orangeForm-name3',style='color:blue;') Family Member Name
                              input.form-control(type='text' ,name='name')
                              i.zmdi.zmdi-account
                            .form-wrapper
                              br
                              label(for='orangeForm-name3',style='color:blue;') Email Address
                              input.form-control(type='text')
                              i.zmdi.zmdi-email
                            .form-wrapper
                              br
                              label(for='orangeForm-name3',style='color:blue;') Country of Birth
                              select.form-control.selectpicker.countrypicker(placeholder='Country of Origin' ,name='birthcountry', data-default='India')
                              i.zmdi.zmdi-email
                            .form-wrapper
                              br
                              label(for='orangeForm-name3',style='color:blue;') Country of Residency
                              select.form-control.selectpicker.countrypicker(placeholder='Country of Residency' ,name='residencycountry', data-default='Australia')
                              i.zmdi.zmdi-email
                            .form-wrapper
                              br
                              label(for='orangeForm-name3',style='color:blue;') Date Of Birth
                              input#orangeForm-email3.form-control(type='date', placeholder='Date of Birth', name='dob')
                            .form-wrapper
                              br
                              label(for='orangeForm-name3',style='color:blue;') Gender
                              select.form-control(name='', id='')
                                option(value='', disabled='', selected='') Gender
                                option(value='male') Male
                                option(value='femal') Female
                                option(value='other') Other
                              i.zmdi.zmdi-caret-down(style='font-size: 17px')
                            .form-wrapper
                              br
                              label(for='orangeForm-name3',style='color:blue;') Enter Password
                              input.form-control(type='password', placeholder='Password')
                              i.zmdi.zmdi-lock
                            .form-wrapper
                              br
                              label(for='orangeForm-name3',style='color:blue;') Confirm Password
                              input.form-control(type='password', placeholder='Confirm Password')
                              i.zmdi.zmdi-lock
                              br
                            button(style='margin-left: 30%;')
                              |Register
                              i.zmdi.zmdi-arrow-right
            button.navbar-toggler(data-toggle='collapse', data-target='#navcol-1', style='')
              span.sr-only Toggle navigation
              span.navbar-toggler-icon
            #navcol-1.collapse.navbar-collapse
              ul.nav.navbar-nav
    .container.flex-wrap.hero(style='padding-bottom:50%;margin-bottom:0;width:80%;margin-top:0;height:100%;padding-left:0px;')
      .row(style='height:100%;width:100%;')
        .col-12.col-lg-6.col-xl-5.offset-xl-1(style='height:100px;width:100%;')
          img.device(src='images/thakurcoverpic.jpg', style='height:300%;width:200%;padding-left:200px;')
          h1.visible(style='margin-top:10px;margin-bottom:0px;margin-left:100px;height:100px;width:800px;background-color:#efe9f2;padding-left:200px;padding-top:5%;color:rgb(16,15,15);') &nbsp; &nbsp; &nbsp; &nbsp;ISTAVRITY PORTAL
        .col
